<div class="quiz wait card">
  <%= image_tag "quiz.svg" %>
  <div class="content">
    <span class="title">Rails Quiz</span>
    <div class="desc-wrapper">
      <span class="desc">Share the link for a multiplayer game.</span>
      <span class="desc">Starting the quiz will start for all players.</span>
    </div>
    <div class="action-items">
      <%= form_with model: quiz do |f| %>
        <button type="submit" class="start">
          <span>Start Quiz</span>
          <span class="material-icons">
          flight_takeoff
        </span>
        </button>
      <% end %>

      <button type="secondary" class="copy" data-controller="clipboard" data-clipboard-target="action" data-action="clipboard#copy">
        <span>Copy link</span>
        <span class="material-icons">
          content_paste
        </span>
      </button>
    </div>
  </div>
</div>
